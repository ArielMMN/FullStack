<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    body{
        background-color: grey;
        text-align: center;
    }
    .car {
    text-align: center;
    background-color: #fff;        
    border: 1px solid #ccc;        
    border-radius: 10px;           
    padding: 20px;                 
    margin: 20px auto;             
    color: #333;                   
             
    box-shadow: 0 4px 8px rgba(0,0,0,0.1); 
    max-width: 300px;              
    transition: transform 0.3s ease; 

}

.car:hover {
    transform: scale(1.05);
}

.car p {
    margin: 5px 0;                
}
</style>
<body>
    <h1>Carros</h1>
    <h2>Gerenciamento de carro <a href="/gerenciamento_carro">aqui!!!</a></h2>
    <div>
    <% carros.forEach(function(carro) { %>
        <div class="car">
            <h2><strong>Marca:<%= carro.db_marca %></strong></h2>
            <p>Modelo: <%= carro.db_modelo %></p>
            <p>Ano de Fabricação:<%= carro.db_ano %></p>
            <p>Quantidade Disponivel:<%= carro.db_qtd %></p>
        </div>
    <% }); %>
</div>
</body>
</html>